{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "newLine": "LF",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*.ts",
    "./node_modules/**/*.tsx",
    "./typings/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
